<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <referenceBlock name="catalog.product.related" remove="false"/>
    <referenceContainer name="content.aside">
        <block name="ko_related_products" template="Devlat_RelatedProducts::related.phtml">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="title" xsi:type="array">
                            <item name="component" xsi:type="string">
                                Devlat_RelatedProducts/js/title
                            </item>
                            <item name="config" xsi:type="array">
                                <item name="template" xsi:type="string">
                                    Devlat_RelatedProducts/title
                                </item>
                            </item>
                        </item>
                        <item name="products" xsi:type="array">
                            <item name="component" xsi:type="string">
                                Devlat_RelatedProducts/js/products
                            </item>
                            <item name="config" xsi:type="array">
                                <item name="template" xsi:type="string">
                                    Devlat_RelatedProducts/products
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </block>
    </referenceContainer>
</page>
